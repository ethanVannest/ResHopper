<!DOCTYPE html>
<html lang="en">
    <head>
      <%- include('../partials/head.ejs') %>
    </head>
<body>
    <h1>ResHopper</h1>
    <a href="/res/<%= randomItem.id %>">Go Eat!</a>
    <ul>
        <% for (let i in hopItem) { %>
            <li>
                <a href="res/<%=hopItem[i].id %>">
                    <%= hopItem[i].name %>
                </a>
                <form action="/res/<%= hopItem[i].id %>?_method=delete" method="POST">
                    <input id="delete" type="submit" value="Remove">
                </form>
                <a href="/res/<%= hopItem[i].id %>/edit">edit</a>
                <% } %>
            </li>
    </ul>
    <a href="/res/new">New</a>
</body>
</html>